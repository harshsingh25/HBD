
<%- include("partials/header"); -%>
    <div class="create">
    <h3>Create</h3><br>
    <form class="" action="/create" method="post">
      <div class="form-group">
        <label>Name/Nickname<br><SPAN style="font-weight: lighter;">(max 7 Characters)</SPAN></label><br>
        <input class="form-control" type="text" name="hbdname"><br>
        <br><label>Url<SPAN style="font-weight: lighter;"">(ex:harsh-singh)</SPAN></label><br>
        <input class="form-control" type="text" name="hbdurl"><br>
        <br><label>Message</label><br>
        <SPAN style="font-weight: lighter;">(use '-' at end of each line)</SPAN><br>
        <textarea class="form-control" name="hbdmsg" rows="10" cols="25"></textarea><br>

      </div>
      <button class="btn btn-primary" type="submit" name="button">Submit</button>
    </form>   
  
    </div>
